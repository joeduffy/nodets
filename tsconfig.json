{
    "compilerOptions": {
        "outDir": "bin",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "stripInternal": true,
        "experimentalDecorators": true,
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true
    },
    "files": [
        "src/index.ts",

        "src/async/cancel.ts",
        "src/async/stream.ts",

        "src/cmd/index.ts",
        "src/cmd/exec.ts",
        "src/cmd/options.ts",
        "src/cmd/spawn.ts",

        "src/contract/index.ts",

        "src/fs/index.ts",

        "src/jsonlike/index.ts",

        "src/object/index.ts",

        "src/net/index.ts",

        "src/time/index.ts",

        "src/web/index.ts",
        "src/web/http.ts",
        "src/web/url.ts",

        "tests/contract.ts",
        "tests/jsonlike.ts",
        "tests/util.ts",
        "tests/web/http.ts",
        "tests/web/url.ts"
    ]
}

